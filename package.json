{
    "name": "chrome-can-you-not",
    "version": "1.1.0",
    "description": "Detect and stop chrome from running in the background",
    "main": "dist/main.js",
    "scripts": {
        "// -- dev -- //": "",
        "clean": "rimraf dist",
        "prune": "npm prune && npm i --package-lock --ignore-scripts",
        "update": "npm update -D && npm i --package-lock --ignore-scripts && npm run prune",
        "// -- build -- //": "",
        "rebuild": "electron-rebuild",
        "build:typescript": "tsc --outDir dist",
        "build": "npm run build:typescript",
        "prepare": "npm run clean && npm run build",
        "// -- run -- //": "",
        "start:dev": "npm run clean && npm run build && electron .",
        "start:forge": "npm run prepare && electron-forge start",
        "start": "electron-forge start",
        "// -- test -- //": "",
        "test": "echo \"Error: no test specified\" && exit 1",
        "// -- deploy -- //": "",
        "package": "npm run prepare && electron-forge package",
        "make": "npm run prepare && electron-forge make"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/KatsuteDev/Chrome-Can-You-Not.git"
    },
    "author": "Katsute",
    "license": "GPL-2.0",
    "bugs": {
        "url": "https://github.com/KatsuteDev/Chrome-Can-You-Not/issues"
    },
    "homepage": "https://github.com/KatsuteDev/Chrome-Can-You-Not#readme",
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.61",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
        "@electron-forge/maker-zip": "^6.0.0-beta.61",
        "copyfiles": "^2.4.1",
        "electron": "^15.2.0",
        "electron-rebuild": "^3.2.5",
        "rimraf": "^3.0.2",
        "typescript": "^4.5.4"
    },
    "dependencies": {
        "electron-squirrel-startup": "^1.0.0",
        "process-list": "^2.0.0"
    },
    "config": {
        "forge": {
            "packagerConfig": {
                "name": "Chrome Can You Not",
                "icon": "icon.ico",
                "appCopyright": "Â© Katsute 2021",
                "ignore": [
                    "^/\\.github",
                    "^/src",
                    "^/tsconfig.json",
                    "^/\\.gitignore"
                ]
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "Chrome-Can-You-Not",
                        "setupIcon": "icon.ico",
                        "loadingGif": "installer.gif"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip"
                }
            ]
        }
    }
}